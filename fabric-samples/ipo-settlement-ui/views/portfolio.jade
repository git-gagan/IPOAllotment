extends layout

block content
    div.container   
        .row 
            .col-2 
            .col-8
                #portfolios
                //- if data 
                //-     .alert.alert-info(role='alert') #{data}
               
                if !isEmpty
                    for item in portfolios
                        .card.border-success.mb-5
                            .card-body
                                .card-header.h3.bg-success(style="text-align:center;") #{item.ipo_name}
                        table.table
                        
                            tbody
                                tr
                                    td 
                                        h4 Average Value Per Share
                                    td 
                                        h4 #{item.avg_price_per_share}

                                tr
                                    td 
                                        h4 Total Shares
                                    td 
                                        h4 #{item.totalShares}
                                
                                tr
                                    td 
                                        h4 Total Value
                                    td 
                                        h4 #{item.totalValue}
                else 
                    center 
                        tr 
                            h3.color.center Empty Portfolio
                                    
                                

                            

                            
                                