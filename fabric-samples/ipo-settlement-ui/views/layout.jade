    script.
        $(document).ready(function() {
            var toastContainer = $('#toast-container');

            if (toastContainer.length) {
                var message = '#{message}';
                var type = '#{type}';

                var toast = new bootstrap.Toast(toastContainer[0], {
                    delay: 3000,
                    autohide: true,
                    animation: true
                });

                toast.show();

                toastContainer.append('<div class="toast show bg-' + type + '" role="alert" aria-live="assertive" aria-atomic="true"><div class="toast-body">' + message + '</div></div>');
            }
        });

